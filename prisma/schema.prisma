// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User{
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  password String 
  name String?
  tours Tour[]
}

model Tour{
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  TourName String @unique
  difficulty String 
}